<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"

    tools:context="com.deliman_poc.rokomari.deliman_rokomari_poc.details.DetailActivity">



        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"

        >


        <TextView

            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Order Id: "
            android:textStyle="bold"
            android:textSize="20dp"

            android:textColor="#100f0f"
            android:layout_marginLeft="20dp"


            />


        <TextView
            android:id="@+id/textview_order_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textSize="15dp"

            android:layout_marginLeft="15dp"
            android:textColor="#2d2de7"


            />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >


        <TextView

            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Recipient: "
            android:textStyle="bold"
            android:textSize="20dp"

            android:textColor="#100f0f"

            android:layout_marginLeft="20dp"
            />


        <TextView
            android:id="@+id/textview_recipient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textSize="15dp"

            android:layout_marginLeft="15dp"
            android:textColor="#2d2de7"
            />

    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >


        <TextView

            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Order Type: "
            android:textStyle="bold"
            android:textSize="20dp"

            android:textColor="#100f0f"

            android:layout_marginLeft="20dp"
            />


        <TextView
            android:id="@+id/textview_order_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textSize="15dp"

            android:layout_marginLeft="15dp"
            android:textColor="#2d2de7"
            />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >


        <TextView

            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Area: "
            android:textStyle="bold"
            android:textSize="20dp"

            android:textColor="#100f0f"

            android:layout_marginLeft="20dp"
            />


        <TextView
            android:id="@+id/textview_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textSize="15dp"

            android:layout_marginLeft="15dp"
            android:textColor="#2d2de7"
            />

    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >


        <TextView

            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="District: "
            android:textStyle="bold"
            android:textSize="20dp"

            android:textColor="#100f0f"

            android:layout_marginLeft="20dp"
            />


        <TextView
            android:id="@+id/textview_district"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textSize="15dp"

            android:layout_marginLeft="15dp"
            android:textColor="#2d2de7"
            />

    </LinearLayout>





</LinearLayout>
